<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Scrollable content for small screens -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_screen_horizontal"
            android:paddingEnd="@dimen/margin_screen_horizontal"
            android:paddingBottom="@dimen/margin_large">

            <!-- Top Spacer (adaptive height) -->
            <View
                android:id="@+id/topSpacer"
                android:layout_width="0dp"
                android:layout_height="@dimen/padding_top_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Album Art Card View (Responsive with multiple size constraints) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAlbumArt"
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="@dimen/album_art_corner_radius"
                app:cardElevation="@dimen/album_art_elevation"
                app:strokeWidth="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toBottomOf="@id/topSpacer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="@dimen/album_art_width_percent"
                app:layout_constraintWidth_max="@dimen/album_art_max_size"
                app:layout_constraintWidth_min="@dimen/album_art_min_size">

                <ImageView
                    android:id="@+id/ivAlbumArt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"
                    app:tint="?attr/colorPrimary"
                    tools:ignore="ContentDescription"
                    android:background="?attr/colorSurfaceVariant"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- Song Name (Adaptive text size) -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSongName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_album_title"
                tools:text="Song Title That Is Longer Than Expected"
                android:text="@string/no_song_selected"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/song_title_min_text_size"
                android:autoSizeMaxTextSize="@dimen/song_title_max_text_size"
                android:autoSizeStepGranularity="1sp"
                app:layout_constraintTop_toBottomOf="@id/cardAlbumArt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Progress Slider Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sliderContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_title_slider"
                app:layout_constraintTop_toBottomOf="@id/tvSongName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.slider.Slider
                    android:id="@+id/seekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:value="0"
                    app:labelBehavior="gone"
                    app:thumbColor="?attr/colorPrimary"
                    app:trackColorActive="?attr/colorPrimary"
                    app:trackColorInactive="?attr/colorSurfaceVariant"
                    app:trackHeight="@dimen/slider_track_height"
                    app:thumbRadius="@dimen/slider_thumb_radius"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvCurrentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_time_labels"
                    tools:text="00:00"
                    android:text="00:00"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:layout_constraintTop_toBottomOf="@id/seekBar"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTotalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_time_labels"
                    tools:text="05:17"
                    android:text="00:00"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:layout_constraintTop_toBottomOf="@id/seekBar"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Controls Container (Adaptive button sizes) -->
            <LinearLayout
                android:id="@+id/controlsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_slider_controls"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/sliderContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnPlayPauseToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/cd_play_pause"
                    app:backgroundTint="?attr/colorPrimary"
                    app:elevation="0dp"
                    app:fabSize="auto"
                    app:fabCustomSize="@dimen/fab_play_size"
                    app:maxImageSize="@dimen/fab_play_icon_size"
                    app:hoveredFocusedTranslationZ="0dp"
                    app:pressedTranslationZ="0dp"
                    app:tint="?attr/colorOnPrimary"
                    tools:srcCompat="@drawable/ic_pause" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_between_control_buttons"
                    android:contentDescription="@string/cd_stop"
                    app:srcCompat="@drawable/ic_stop"
                    app:fabSize="auto"
                    app:fabCustomSize="@dimen/fab_stop_size"
                    app:maxImageSize="@dimen/fab_stop_icon_size"
                    app:tint="?attr/colorOnSecondaryContainer"
                    app:backgroundTint="?attr/colorSecondaryContainer"
                    app:elevation="0dp"
                    app:hoveredFocusedTranslationZ="0dp"
                    app:pressedTranslationZ="0dp" />

            </LinearLayout>

            <!-- Action Buttons Container (Adaptive layout) -->
            <LinearLayout
                android:id="@+id/actionButtonsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_between_controls_actions"
                app:layout_constraintTop_toBottomOf="@id/controlsContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_max="@dimen/controls_max_width">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangeSong"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="@string/change_song"
                    android:textSize="@dimen/button_text_size"
                    app:icon="@drawable/ic_music_note"
                    app:iconGravity="textStart"
                    app:iconSize="@dimen/button_icon_size"
                    android:layout_marginEnd="@dimen/margin_between_action_buttons" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSavePreset"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="@string/save"
                    android:textSize="@dimen/button_text_size"
                    app:icon="@drawable/ic_save"
                    app:iconGravity="textStart"
                    app:iconSize="@dimen/button_icon_size"
                    android:layout_marginStart="@dimen/margin_between_action_buttons"/>

            </LinearLayout>

            <!-- Bottom spacer to ensure content doesn't stick to bottom -->
            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_bottom_spacing"
                app:layout_constraintTop_toBottomOf="@id/actionButtonsContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>